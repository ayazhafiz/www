{
  "name": "cr-ayazhafiz.com",
  "version": "0.0.1",
  "description": "personal site",
  "main": "index.js",
  "scripts": {
    "precompile:css": "node-sass src/css/index.scss -o public/css/ --output-style compressed",
    "compile:css": "postcss public/css/*.css --use autoprefixer -d public/css/ --no-map",
    "compile:js": "webpack -p",
    "build": "npm-run-all compile:css compile:js",
    "deploy": "KEMAL_ENV=production ./app --port $PORT",
    "deploy:dev": "./sentry -w './src/**/*.cr' -w './views/**/*.ecr'",
    "start": "npm-run-all build deploy",
    "start:dev": "npm-run-all build deploy:dev",
    "test": "KEMAL_ENV=test crystal spec",
    "heroku-postbuild": "echo 'deployed to http://ahafiz.herokuapp.com'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ayazhafiz/crystal-ah.git"
  },
  "author": "Hafiz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ayazhafiz/crystal-ah/issues"
  },
  "homepage": "https://github.com/ayazhafiz/crystal-ah#readme",
  "dependencies": {
    "autoprefixer": "^7.1.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.5.2",
    "gsap": "^1.19.1",
    "jquery": "^3.2.1",
    "jquery-scrollify": "^1.0.14",
    "node-sass": "4.5.3",
    "npm-run-all": "^4.0.2",
    "particles.js": "^2.0.0",
    "postcss-cli": "^4.0.0",
    "prismjs": "^1.6.0",
    "webpack": "^2.6.1"
  },
  "engines": {
    "node": "7.9.0",
    "npm": "4.2.0"
  }
}
